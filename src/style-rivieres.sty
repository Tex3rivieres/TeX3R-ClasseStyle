\newcommand{\formatEnvCours}[2]{% tcolorbox : #1=couleur de la ligne à gauche, #2=Nom affiché
\begin{tcolorbox}[
    colback=#1!1,      
    colframe=#1,    
    boxrule=0pt,        
    left=0.5em,
    top=0pt,
    bottom=0pt,
    right=0pt,       
    title=,          
    enhanced,
    shield externalize=true, 
    leftrule=2mm,        
    %borderline west={2pt}{0pt}{#1}
    ]
    #2
\end{tcolorbox}
}

